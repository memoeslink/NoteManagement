<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.memoeslink.notemanagement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_papers"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/DefaultTheme">
        <activity android:name="com.app.memoeslink.notemanagement.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.HomeScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name="com.app.memoeslink.notemanagement.NoteViewScreen"
            android:configChanges="orientation"
            android:theme="@style/Theme.Translucent"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.LoginScreen"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name="com.app.memoeslink.notemanagement.AccountScreen"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.ManagementScreen"
            android:configChanges="orientation"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.NoteScreen"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.EventScreen"
            android:configChanges="orientation"
            android:theme="@style/Theme.Translucent"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
        <activity
            android:name="com.app.memoeslink.notemanagement.PreferenceScreen"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>
    </application>
</manifest>